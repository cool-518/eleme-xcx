
.all{
    width:100%;
}
.wrap {
    width: 100%;
   
}
.seller {
  
    top:0;
    width: 100%;
    height: 220rpx;
    background-color: #0097ff;
    color: white;
}

.seller-main {
    display: flex;
    flex-direction: row;
    margin-left: 10rpx;
}

.seller-icon {
    width: 150rpx;
    height: 150rpx;
}

.seller-message {
    margin-left: 15rpx;
    display: flex;
    flex-direction: column;
}

.send-time-tip, .attention {
    font-size: 28rpx;
}

.attention {
    margin-top: 40rpx;
    font-size: 23rpx;
}

.activity {
    font-size: 28rpx;
    margin-top: 12rpx;
}

.discount-type {
    float: left;
    margin-left: 10rpx;
}

.discount-img {
    width: 30rpx;
    height: 30rpx;
}

.discount-text {
    margin-left: 12rpx;
}

.more-activity {
    float: right;
    margin-right: 25rpx;
}

.list-nav {
    display: flex;
    flex-direction: row;
    height: 80rpx;
    font-size: 32rpx;
    color: #0097ff;
    margin-top: 10rpx;
}

.together {
    width: 150rpx;
    height: 50rpx;
    margin-right: 35rpx;
    position: relative;
}

.together text {
    font-size: 32rpx;
    color: #0097ff;
    position: absolute;
    transform: translate(-20rpx, -40rpx);
    top: 50%;
}

.list-value {
    margin-left: 80rpx;
    color: gray;
}

.list-value-num {
    color: #fab535;
}

.list-gooods {
    margin-left: 15rpx;
}

.category {
   
    width: 100%;
    display: flex;
    flex-direction: row;
}

.good-category {
    width: 20%;
    color: #666;
    font-size: 26rpx;
}

.good-category view {
    width: 100%;
    height: 140rpx;
    line-height: 140rpx;
    text-align: center;
    white-space: wrap;
    background: white;
}

.good-category-active{
    border-left: #0097ff solid 3rpx;
}

.category-right {
    width: 80%;
}

.type-fasinate {
    background-color: aliceblue;
}

.category-type {
    font-size: 28rpx;
}

.to-fasinate {
    color: #666;
    font-size: 22rpx;
}

.category-right-detail {
    display: flex;
    flex-direction: row;
}
item-detail{
    margin-left:20rpx;
}
.item-img {
    width: 130rpx;
    height: 130rpx;
}

.send, .sale-eval {
    color: #666;
    font-size: 24rpx;
    position:relative;
}

.send-least {
    color: #fab535;
    font-size: 32rpx;
}

.send {
    display: flex;
    flex-direction: row;
}

.choose {
    margin-top: 10rpx;
     position:absolute;
     right:-80rpx;
    width: 250rpx;
    display: flex;
    flex-direction: row;
}

.choose-img {
    width: 45rpx;
    height: 45rpx;
}
.choose_delete{
margin-right:10rpx;
}
.itemNum{
margin-right:10rpx;
width:20rpx;
}
.choose_add {
margin-bottom:15rpx;
}

.category-right-detail {
    width: 100%;
}

.item-detail {
    width: 100%;
}

.bottom {
    width: 100%;
    height: 70rpx;
  
}
.shopping-car{
    width:95rpx;
height:95rpx;
border-top-left-radius: 100rpx;
border-top-right-radius:100rpx;
}
.bottom-selling{
    display: flex;
    flex-direction: row;
}
.bottom{
  width:100%;
  height:90rpx;
  background-color:gray;
position:fixed;
bottom:0;
}
.bottom-selling{
    height:90rpx;
     line-height: 90rpx;
     position: relative;
}
.chose{
    margin-left:30rpx;
    font-size:32rpx;
}
.total-price{
    color:white;
}

.send-least-2{
  position: absolute;
  right:0;
    width:150rpx;
    height:90rpx;
    color:white;
    font-size:25rpx;
    text-align: center;
}
.bottom-done{
display: none;
}
.enough{
    background-color:green;
}
.car{
   position:relative;
}
.count{
    width:40rpx;
    height:40rpx;
    background: red;
    color:white;
      border-radius: 40rpx; 
    position: absolute;
    top:-10rpx;
    right:-10rpx;
    z-index:100;
    text-align: center;
   line-height: 40rpx;
}